<!DOCTYPE html>
<html lang="en" class="light">
  <head>
    {{ include "./meta.jet" }}
    <title>Register</title>
  </head>
  <body>
    <form class="container mx-auto mt-10" method="POST" action="/register">
      <div class="mb-6">
        <label for="username" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Username</label>
        <input type="text" id="username" name="username" class="input input-bordered input-primary w-full max-w-xs" placeholder="Username" required />
      </div>
      <div class="mb-6">
        <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
        <input type="password" id="password" name="password" class="input input-bordered input-primary w-full max-w-xs" placeholder="Password" required />
      </div>
      <button type="submit" class="btn btn-primary w-full">Register</button>
      <div class="mt-4">
        <p class="text-sm text-gray-500">Already have an account? <a href="/login">Login</a></p>
      </div>
    </form>
  </body>
</html>
